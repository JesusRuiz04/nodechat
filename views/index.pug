extends layout

block content
  h1= title
  h2#numClientes
  p Welcome to #{title}
  ul#mensajes

  div
    label Usuario
    input#inputUsuario(type="text")
  p 
  div 
    label Mensaje
    input#inputMensaje(type="text")
  p 
  button#btnMensaje Enviar

  script(src="/socket.io/socket.io.js")
  script.
    alert('Se está ejecutando JS')
    const socket = io();
    const inputUsuario = document.getElementById('inputUsuario');
    const inputMensaje = document.getElementById('inputMensaje');
    const btnEnviar = document.getElementById('btnMensaje');
    const mensajes = document.getElementById('mensajes');
    const numClientes = document.getElementById('numClientes');  // Corregido el ID

    socket.on('mensaje_chat', datos => {
      const li = document.createElement('li');
      li.innerText = `${datos.usuario}: ${datos.mensaje}`;  // Corregido la interpolación
      mensajes.appendChild(li);
    });

    btnEnviar.addEventListener('click', () => {
      socket.emit('mensaje_chat', {
        usuario: inputUsuario.value,
        mensaje: inputMensaje.value
      });
    });

    socket.on('num_Clientes', num => {
      numClientes.innerText = `Clientes conectados: ${num}`;  // Corregido la interpolación
    });
